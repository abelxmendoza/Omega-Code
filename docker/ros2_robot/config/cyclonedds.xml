<CycloneDDS>
  <!-- 
    CycloneDDS Configuration for Multi-Device ROS2
    For multi-device setup (Laptop + Pi + Orin), use:
      ./scripts/setup_multidevice_ros2.sh
    This will generate a config with all device IPs from .env.ros2.multidevice
  -->
  <Domain id="any">
    <General>
      <NetworkInterfaceAddress>auto</NetworkInterfaceAddress>
      <AllowMulticast>true</AllowMulticast>
    </General>
    <Discovery>
      <Peers>
        <Peer address="192.168.1.107"/> <!-- Raspberry Pi - Update as needed -->
        <Peer address="192.168.1.202"/> <!-- MacBook/Laptop - Update as needed -->
        <Peer address="100.107.112.110"/> <!-- Jetson Orin Nano (Tailscale IP: omega1@100.107.112.110) -->
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>
