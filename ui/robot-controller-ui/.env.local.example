# File: /Omega-Code/ui/robot-controller-ui/.env.local.example
# Purpose: Copy to `.env.local` and replace placeholders with YOUR values.
# NOTE: These are client-exposed (NEXT_PUBLIC_*). Do not put secrets here.

###############################################################################
# Active network profile for all endpoints (used by resolvers & proxies)
# Options: lan | tailscale | local
###############################################################################
NEXT_PUBLIC_NETWORK_PROFILE=tailscale

###############################################################################
# Gateway host (unified FastAPI gateway on port 7070)
# Replace placeholders with your real hostnames/IPs.
###############################################################################
# Example Tailscale MagicDNS name (placeholder):
NEXT_PUBLIC_GATEWAY_HOST=robot-01.your-tailnet.ts.net
# Default port for the FastAPI gateway:
NEXT_PUBLIC_GATEWAY_PORT=7070

# (Optional) Per-profile robot host hints used by some resolvers (placeholders)
NEXT_PUBLIC_ROBOT_HOST_TAILSCALE=robot-01.your-tailnet.ts.net
NEXT_PUBLIC_ROBOT_HOST_LAN=192.168.1.123
NEXT_PUBLIC_ROBOT_HOST_LOCAL=robot.local

###############################################################################
# Video stream (MJPEG) upstreams used by /api/video-proxy and /api/video-health
# Replace with absolute http(s) URLs pointing at your gateway's /video_feed.
###############################################################################
NEXT_PUBLIC_VIDEO_STREAM_URL_TAILSCALE=http://robot-01.your-tailnet.ts.net:7070/video_feed
NEXT_PUBLIC_VIDEO_STREAM_URL_LAN=http://192.168.1.123:7070/video_feed
NEXT_PUBLIC_VIDEO_STREAM_URL_LOCAL=http://robot.local:7070/video_feed

###############################################################################
# WebSocket URLs (gateway proxies to subsystems under /ws/*)
# Tip: Use ws:// â€” the app auto-upgrades to wss:// on HTTPS pages unless
#      NEXT_PUBLIC_WS_FORCE_INSECURE=1 is set.
###############################################################################
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_TAILSCALE=ws://robot-01.your-tailnet.ts.net:7070/ws/movement
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_LAN=ws://192.168.1.123:7070/ws/movement
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_LOCAL=ws://robot.local:7070/ws/movement

NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_TAILSCALE=ws://robot-01.your-tailnet.ts.net:7070/ws/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_LAN=ws://192.168.1.123:7070/ws/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_LOCAL=ws://robot.local:7070/ws/ultrasonic

NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_TAILSCALE=ws://robot-01.your-tailnet.ts.net:7070/ws/line
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_LAN=ws://192.168.1.123:7070/ws/line
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_LOCAL=ws://robot.local:7070/ws/line

NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_TAILSCALE=ws://robot-01.your-tailnet.ts.net:7070/ws/lighting
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_LAN=ws://192.168.1.123:7070/ws/lighting
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_LOCAL=ws://robot.local:7070/ws/lighting

###############################################################################
# WebSocket behavior & debug
###############################################################################
# Keep ws:// even on HTTPS pages (useful for certain proxies). 0 = auto-upgrade to wss://
NEXT_PUBLIC_WS_FORCE_INSECURE=0
# Browser console debug for URL selection & socket lifecycle
NEXT_PUBLIC_WS_DEBUG=0
