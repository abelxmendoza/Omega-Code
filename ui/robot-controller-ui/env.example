# Robot Controller UI - Environment Variables
# Copy this file to .env.local for local development
# All NEXT_PUBLIC_ variables are exposed to the browser at build time

# ============================================================================
# NETWORK PROFILE
# ============================================================================
# Controls which network profile is active: tailscale | lan | local
# Can be overridden via ?profile=tailscale|lan|local URL parameter
NEXT_PUBLIC_NETWORK_PROFILE=tailscale

# ============================================================================
# GATEWAY CONFIGURATION
# ============================================================================
# Gateway host (can include scheme and port, e.g., http://host:7070)
# Falls back to NEXT_PUBLIC_ROBOT_HOST_* based on active profile
NEXT_PUBLIC_GATEWAY_HOST=
NEXT_PUBLIC_GATEWAY_PORT=7070
NEXT_PUBLIC_GATEWAY_SCHEME=http

# Profile-specific gateway overrides (optional)
# NEXT_PUBLIC_GATEWAY_HOST_TAILSCALE=
# NEXT_PUBLIC_GATEWAY_PORT_TAILSCALE=
# NEXT_PUBLIC_GATEWAY_SCHEME_TAILSCALE=
# NEXT_PUBLIC_GATEWAY_HOST_LAN=
# NEXT_PUBLIC_GATEWAY_PORT_LAN=
# NEXT_PUBLIC_GATEWAY_SCHEME_LAN=
# NEXT_PUBLIC_GATEWAY_HOST_LOCAL=
# NEXT_PUBLIC_GATEWAY_PORT_LOCAL=
# NEXT_PUBLIC_GATEWAY_SCHEME_LOCAL=

# ============================================================================
# ROBOT HOST CONFIGURATION
# ============================================================================
# Robot host addresses per profile (used by gateway and WebSocket resolution)
# If NEXT_PUBLIC_ROBOT_HOST_* is set, it takes precedence over NEXT_PUBLIC_GATEWAY_HOST_*
NEXT_PUBLIC_ROBOT_HOST_TAILSCALE=100.93.225.61
NEXT_PUBLIC_ROBOT_HOST_LAN=192.168.6.164
NEXT_PUBLIC_ROBOT_HOST_LOCAL=localhost

# ============================================================================
# WEBSOCKET URLS - MOVEMENT
# ============================================================================
# Full WebSocket URLs per profile for movement control
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_TAILSCALE=ws://100.93.225.61:8081/
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_LAN=ws://192.168.6.164:8081/
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_LOCAL=ws://localhost:8081/

# Fallback: base movement URL (used if profile-specific not set)
# NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT=

# ============================================================================
# WEBSOCKET URLS - ULTRASONIC SENSOR
# ============================================================================
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_TAILSCALE=ws://100.93.225.61:8080/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_LAN=ws://192.168.6.164:8080/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_LOCAL=ws://localhost:8080/ultrasonic
# NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC=

# ============================================================================
# WEBSOCKET URLS - LINE TRACKER
# ============================================================================
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_TAILSCALE=ws://100.93.225.61:8090/line-tracker
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_LAN=ws://192.168.6.164:8090/line-tracker
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_LOCAL=ws://localhost:8090/line-tracker
# NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER=

# ============================================================================
# WEBSOCKET URLS - LIGHTING
# ============================================================================
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_TAILSCALE=ws://100.93.225.61:8082/lighting
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_LAN=ws://192.168.6.164:8082/lighting
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_LOCAL=ws://localhost:8082/lighting
# NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING=

# ============================================================================
# WEBSOCKET URLS - LOCATION (optional)
# ============================================================================
# NEXT_PUBLIC_BACKEND_WS_URL_LOCATION_TAILSCALE=
# NEXT_PUBLIC_BACKEND_WS_URL_LOCATION_LAN=
# NEXT_PUBLIC_BACKEND_WS_URL_LOCATION_LOCAL=
# NEXT_PUBLIC_BACKEND_WS_URL_LOCATION=

# ============================================================================
# WEBSOCKET URLS - SPEED CONTROL (optional)
# ============================================================================
# NEXT_PUBLIC_BACKEND_WS_URL_SPEED_TAILSCALE=
# NEXT_PUBLIC_BACKEND_WS_URL_SPEED_LAN=
# NEXT_PUBLIC_BACKEND_WS_URL_SPEED_LOCAL=
# NEXT_PUBLIC_BACKEND_WS_URL_SPEED=

# ============================================================================
# VIDEO STREAM URLS
# ============================================================================
NEXT_PUBLIC_VIDEO_STREAM_URL_TAILSCALE=http://100.93.225.61:5000/video_feed
NEXT_PUBLIC_VIDEO_STREAM_URL_LAN=http://192.168.6.164:5000/video_feed
NEXT_PUBLIC_VIDEO_STREAM_URL_LOCAL=http://localhost:5000/video_feed

# ============================================================================
# DEBUG & MOCK SETTINGS
# ============================================================================
# Enable WebSocket debug logging (1|0 or true|false)
NEXT_PUBLIC_WS_DEBUG=1
NEXT_PUBLIC_VERBOSE_LOGGING=1

# Force insecure WebSocket (ws://) even on HTTPS pages (1|0)
NEXT_PUBLIC_WS_FORCE_INSECURE=0

# Mock WebSocket connections (for testing without robot)
NEXT_PUBLIC_MOCK_WS=0

# Mock backend API (for testing without gateway)
MOCK_BACKEND=0

# Mock SSID (used when MOCK_BACKEND=1)
MOCK_SSID=MockNet

# ============================================================================
# CONNECTION SETTINGS
# ============================================================================
# WebSocket reconnection settings
NEXT_PUBLIC_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_RECONNECT_DELAY=3000
NEXT_PUBLIC_HEARTBEAT_INTERVAL=10000
NEXT_PUBLIC_CONNECTION_TIMEOUT=5000

# ============================================================================
# NETWORK API BASE URL (optional)
# ============================================================================
# If set, network API calls will use this base URL instead of same-origin /api/*
# Example: http://raspberrypi.local:5055
# NEXT_PUBLIC_NET_API_BASE=