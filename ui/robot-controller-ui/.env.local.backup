# Mobile Hotspot & Outdoor Use Configuration
# Optimized for iPhone hotspot + M1 MacBook outdoor use

# Network profile (tailscale | lan | local)
NEXT_PUBLIC_NETWORK_PROFILE=tailscale

# Debug settings for outdoor troubleshooting
NEXT_PUBLIC_WS_DEBUG=1
NEXT_PUBLIC_VERBOSE_LOGGING=1
NEXT_PUBLIC_MOCK_WS=0

# WebSocket URLs - Tailscale (via gateway on port 7070)
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_TAILSCALE=ws://omega1-1.hartley-ghost.ts.net:7070/ws/movement
# Ultrasonic: Direct connection to Go server on port 8080 (bypasses gateway)
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_TAILSCALE=ws://100.93.225.61:8080/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_TAILSCALE=ws://omega1-1.hartley-ghost.ts.net:7070/ws/line
NEXT_PUBLIC_BACKEND_WS_URL_LIGHTING_TAILSCALE=ws://100.93.225.61:8082/lighting

# WebSocket URLs - LAN (via gateway on port 7070)
NEXT_PUBLIC_BACKEND_WS_URL_MOVEMENT_LAN=ws://192.168.1.107:7070/ws/movement
# Ultrasonic: Direct connection to Go server on port 8080 (bypasses gateway)
NEXT_PUBLIC_BACKEND_WS_URL_ULTRASONIC_LAN=ws://192.168.6.164:8080/ultrasonic
NEXT_PUBLIC_BACKEND_WS_URL_LINE_TRACKER_LAN=ws://192.168.1.107:7070/ws/line
